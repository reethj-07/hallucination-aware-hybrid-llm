import json
from datetime import datetime

def log_query(query, answer, grounded):
    log = {
        "timestamp": datetime.utcnow().isoformat(),
        "query": query,
        "answer": answer,
        "grounded": grounded
    }
    with open("logs/inference_logs.jsonl", "a") as f:
        f.write(json.dumps(log) + "\n")
